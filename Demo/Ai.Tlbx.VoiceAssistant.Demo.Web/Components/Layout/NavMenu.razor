@using Ai.Tlbx.VoiceAssistant

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Voice Assistant Chat</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-mic-fill" aria-hidden="true"></span> Voice Chat
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="javascript:void(0)" @onclick="ClearChatHistory">
                <span class="bi bi-trash" aria-hidden="true"></span> Clear Chat
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [CascadingParameter] private VoiceAssistant? VoiceAssistant { get; set; }

    private void ClearChatHistory()
    {
        VoiceAssistant?.ClearChatHistory();
    }
}

